<p id="notice"><%= notice %></p>
<div id="pin_show" class="row">
 <div class="col-md-8 col-md-offset-2">
   <div class="panel panel-default">
   	<div class="panel-heading pin_image">
		<%= image_tag @pin.image.url(:medium) %></div>
		<div class="panel-body">
			<h1><%= @pin.title %></h1>
  		<p class="description"><%= @pin.description %></p><br>
  		<p>Submitted by: <%= @pin.user.email %></p>
  		</div>
  	

		<div class="panel-footer">
			<div class="row">
				<div class="col-md-6">
					<p class="user">Submitted by: <%= @pin.user.email %></p>
				</div>
				<% if user_signed_in? %>
				<div class="col-md-6">
				  <div class="btn-group">
					<div class="pul-right">	
						<%= link_to 'Back', root_path, class: "btn btn-default"%>  
						<%= link_to 'Edit', edit_pin_path(@pin), class: "btn btn-default" %> 
						<%= link_to 'Delete', pin_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" %>
					</div> 
				  </div>
			    </div>
			    <% end %>
			</div>
	  	</div>
	</div>
  </div>
</div>
