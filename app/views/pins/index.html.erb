<div class="container">
<p id="notice"><%= notice %></p>
   	<div class="panel-heading pin_image">
   	  <% @pins.each do |pin| %>
   	  <%= link_to (image_tag pin.image.url(:medium)), pin %>
	    <div class="panel-body">
		  <h2><%= link_to pin.title, pin %></h2>
  		  <p class="description"><%= pin.description %></p>
  		</div>
		  <div class="panel-footer">
		    <div class="row">
			 <div class="col-md-6">
			   <p class="user">Submitted by: <%= pin.user.email %></p>
			 </div>
			 <div class="col-md-6">
			  <div class="btn-group">
			   <div class="pull-right">	
				 <%= link_to 'Show', pin, class: "btn btn-default"%>  
				 <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default" %> 
				 <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
			   </div> 
			  </div>
			 </div>
	  	    </div>
	  	   </div>
	  <% end %> 
	  </div>
	  </div>
	  </div>
</div>
</div>
